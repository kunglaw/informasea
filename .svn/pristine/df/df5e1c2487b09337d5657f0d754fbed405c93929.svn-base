		function searchSeatizen($search,$count = false,$limit = 0){
			$username = $this->session->userdata("username");

			$str = "SELECT * FROM pelaut_ms JOIN profile_resume_tr ON pelaut_ms.pelaut_id = profile_resume_tr.pelaut_id 
			LEFT JOIN department ON profile_resume_tr.department = department.department_id LEFT JOIN rank ON rank.rank_id = profile_resume_tr.rank 
			LEFT JOIN coc_class ON profile_resume_tr.coc_class = coc_class.id_coc_class LEFT JOIN ship_type ON profile_resume_tr.vessel_type = ship_type.type_id 
			WHERE pelaut_ms.activation = 'Active' ";

			if(!empty($search)) $str .= " AND (";

				if(!empty($search)) $str .= " pelaut_ms.nama_depan LIKE '%$search%' OR 
					pelaut_ms.nama_belakang LIKE '%$search%' OR pelaut_ms.username LIKE '%$search%' OR
					pelaut_ms.kebangsaan LIKE '%$search%' OR ship_type.ship_type LIKE '%$search%'
					OR department.department LIKE '%$search%' OR rank.rank LIKE '%$search%'
					OR coc_class.coc_class LIKE '%$search%')";

				if(!empty($username))
							$str .= " AND pelaut_ms.username <> '$username'";
					


					if (!$count) $str .= " LIMIT $limit,10";
			    	//echo $str;
			        $q = $this->db->query($str);
			        $f = $q->result_array();
			        return $f;

		}
		
		
